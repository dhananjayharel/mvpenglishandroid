<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="us.zoom.sdksample.ui.RegisterUserActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_weight="4"
            android:src="@drawable/ic_login"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_margin="?actionBarSize"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="MVPEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textColor="#fff"
            android:textColorHint="#eee"
            android:paddingStart="0dp"
            android:paddingLeft="10dp"
            android:hint="Full Name"
            android:id="@+id/regFullName"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/bottomstroke"
            android:textSize="15sp" />
        <EditText
            android:textColor="#fff"
            android:textColorHint="#eee"
            android:paddingStart="0dp"
            android:paddingLeft="10dp"
            android:hint="Email"
            android:id="@+id/regEmail"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@drawable/bottomstroke"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_margin="10dp"
            android:background="@drawable/bottomstroke"
            android:hint="Password"
            android:id="@+id/regPassword"
            android:inputType="textPassword"
            android:paddingStart="0dp"
            android:paddingLeft="10dp"
            android:textColor="#fff"
            android:textColorHint="#eee"
            android:textSize="15sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_margin="10dp"
            android:background="@drawable/bottomstroke"
            android:hint="Confirm Password"
            android:id="@+id/confirmRegPassword"
            android:inputType="textPassword"
            android:paddingStart="0dp"
            android:paddingLeft="10dp"
            android:textColor="#fff"
            android:textColorHint="#eee"
            android:textSize="15sp" />

        <Button
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:id="@+id/btnUserRegisterUser"
            android:background="@drawable/roundedcorner"
            android:minWidth="150dp"
            android:textColor="@color/zm_white"
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:id="@+id/btnUserBack"
            android:background="@drawable/roundedcorner"
            android:minWidth="150dp"
            android:textColor="@color/zm_white"
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <!--
            <TextView
                android:layout_marginBottom="10dp"
                android:text="by Programmr.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            -->
        </LinearLayout>


    </LinearLayout>
    <ProgressBar
        android:id="@+id/regprogressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        />
</RelativeLayout>